<% include ../partials/header %>
<link rel="stylesheet" href="/stylesheets/buchung.css">
<style type="text/css">

</style>

<div id="con">
<div class="login-form" style="display:inline-block; text-align: left;">
    <form>
        <h2 class="text-center">Termin buchen</h2>		
        <div class="text-center social-btn">
            <a href="#" class="btn btn-primary btn-block"><i class="fa fa-facebook"></i> Mit <b>Facebook</b> fortfahren</a>
            <a href="#" class="btn btn-info btn-block"><i class="fa fa-twitter"></i> Mit <b>Twitter</b> fortfahren</a>
			<a href="#" class="btn btn-danger btn-block"><i class="fa fa-google"></i> Mit <b>Google</b> fortfahren</a>
        </div>
		<div class="or-separator"><i>oder</i></div>
        <div class="form-row">
            <label for="inputEmail4">E-Mail</label>
            <input type="email" class="form-control" id="inputEmail4" placeholder="Mail">
        </div>
        <div class="form-row">
                <label for="strasse">Handy-Nummer</label>
                <input type="number" class="form-control" id="strasse" placeholder="Nr">
        </div>
        <div class="form-group radio">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck">
            <label class="form-check-label" for="gridCheck">
              Ich kenne diesen Arzt bereits
            </label>
          </div>
        </div>
        <button id="but" type="submit" class="btn btn-primary" onclick="replace()">Termin buchen</button>
    </div>

</form>

</div>

<script type="text/JavaScript">
function replace(){
  var myAnchor = document.getElementById("but");
  var myDiv = document.createElement("div");
  myDiv.innerHTML = "Termin erfolgreich gebucht!";
  myDiv.classList.add("alert")
  myDiv.classList.add("alert-success")
  myAnchor.parentNode.replaceChild(myDiv, myAnchor);
}
</script>


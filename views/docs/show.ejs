<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">TopDoc</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= doc.image %>">
                <div class="caption-full">
                    <h4 class="pull-right"></h4>
                    <h4><a><%=doc.name%></a></h4>
                    <p><%= doc.description %></p>
                </div>
            </div>
            <div class="thumbnail">
                <img class="img-responsive" src="https://images.squarespace-cdn.com/content/v1/5597d54de4b053dbac6d43e4/1493319195749-35TFRFOG1LWWKFBHHXI5/ke17ZwdGBToddI8pDm48kGLipD4oQbjCbfcAReKW6upZw-zPPgdn4jUwVcJE1ZvWQUxwkmyExglNqGp0IvTJZUJFbgE-7XRK3dMEBRBhUpydZI8uVAa4LUPikHqFS-pZzGZ4QX0C4wMzXl601E7OCmnkIwL18dmeREyaS3cJiek/CZCPracticeSchedule.png">
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/docs/<%= doc._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% doc.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %> 
                            </p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>